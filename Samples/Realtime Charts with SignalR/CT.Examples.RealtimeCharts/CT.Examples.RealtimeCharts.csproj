    <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="4.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\CT.Examples.RealtimeCharts.Shared\CT.Examples.RealtimeCharts.Shared.csproj" />
